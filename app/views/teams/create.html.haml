.page-header
  %h1
    = t('.register_for_race', :race_name => @team.race.name)
    - if @team.race.not_full?
      %small= t('.spots_remaining', :remaining => @team.race.spots_remaining)
    - else
      %small= t('.waitlist_count', :num => (@team.race.waitlist_count + 1))

.row
  .col-sm-12
    = render 'form'
