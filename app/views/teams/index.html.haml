.page-header
  .row
    .col-md-12
      %h1= t('.your_teams')
      - if @race.present?
        %h3= t('.registering_for_race', :race_name => @race.name)

  - if @race.present?
    .row
      .col-md-7
        %p= t('.instructions')
        %p= t('.registration_instructions', :race_name => @race.name)

- if @teams.blank?
  %p= t('.no_teams')
  %p= t('please_create_to_continue')

- else
  .row
    - @teams.each do |team|
      .col-sm-6.pull-left
        = render 'team_item', :team => team, :race => @race
.row
  = link_to t('create'), new_team_path, :class => ['btn', 'btn-primary']
