.page-header
  - if @race.present?
    - if @teams.blank?
      %h1= t('.next_create_a_team', :name => @race.name)
    - else
      %h1= t('.title')
  - else
    %h1= t('.title')

.row
  .col-md-8
    %p= t('.instructions')
    %p= t('.example')
    %p= t('.registration_instructions')
    %br
    = link_to t('.create'), new_team_path, :class => ['btn', 'btn-success']

.page-header
  %h3
    = t('.your_teams')
- if @teams.blank?
  %p= t('.no_teams')
  %p= t('please_create_to_continue')
- else
  - @teams.each do |team|
    .col-xs-6.col-md-3.pull-left
      = render 'team_item', :team => team, :race => @race
