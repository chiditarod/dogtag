
.page-header
  %h1
    = @race.name
    %small
      = link_to edit_race_path @race do
        %li.fa.fa-edit.fa-fw

.row
  .col-xs-3
    %h2
      %small= t('.race_datetime')
  .col-xs-9
    %h2
      = human_readable_short @race.race_datetime
.row
  .col-xs-3
    %h2
      %small= t('.registration_window')
  .col-xs-9
    %h2
      = human_readable_short @race.registration_open
      to
      = human_readable_short @race.registration_close
.row
  .col-xs-3
    %h2
      %small= t('.max_teams')
  .col-xs-9
    %h2= @race.max_teams
.row
  .col-xs-3
    %h2
      %small= t('.people_per_team')
  .col-xs-9
    %h2= @race.people_per_team

- if @race.registerable? && current_user.has_teams_for(@race)
  .row
    .col-xs-12
      = link_to t('.register_now'), teams_path(:race_id => params[:id]), :class => ['btn', 'btn-primary']
