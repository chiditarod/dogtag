
.page-header
  %h1
    = @race.name
    %small
      = link_to edit_race_path @race do
        %li.fa.fa-edit.fa-fw

.row
  .col-xs-3
    = t('.race_datetime')
  .col-xs-9
    = human_readable_short @race.race_datetime
.row
  .col-xs-3
    = t('.registration_open')
  .col-xs-9
    = human_readable_short @race.registration_open
.row
  .col-xs-3
    = t('.registration_close')
  .col-xs-9
    = human_readable_short @race.registration_close
.row
  .col-xs-3
    = t('.max_teams')
  .col-xs-9
    = @race.max_teams
.row
  .col-xs-3
    = t('.people_per_team')
  .col-xs-9
    = @race.people_per_team

- if @race.registerable?
  .row
    .col-xs-3
      = link_to t("Register"), teams_url, :class => ['btn', 'btn-primary']
