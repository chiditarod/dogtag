%i.fa.fa-shopping-cart.fa-5x.pull-left
%h3= link_to race.name, race_path(race.id)
.clearfix

%h5
  = race.finalized_registrations.count
  = t '.of'
  = race.max_teams
  = t '.teams_registered'

- if race.registerable?
  %h5
    = t '.registration_closes_on'
    = human_readable_short race.registration_close
  %h5
    = distance_of_time_in_words race.closes_in
    = t('.remaining')
- else
  %h5
    = t('.open')
    = race.open_for_registration?
  %h5
    = t('.full?')
    = race.full?
