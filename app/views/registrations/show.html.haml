.page-header
  %h1
    = t('.title', :race_name => @race.name)

.row
  .col-xs-3
    %h1
      %small= t('.registered_as')
  .col-xs-9
    %h1
      = @registration.name
      %small
        = link_to edit_race_registration_path(@race.id, @registration.id) do
          .fa.fa-edit.fa-fw
- if @registration.twitter.present?
  .row
    .col-xs-3
    .col-xs-9
      = link_to @registration.twitter, "http://twitter.com/#{@registration.twitter}/"
.row
  .col-xs-3
    %h1
      %small= t('.description')
  .col-xs-9
    %h1= @registration.description

- if @registration.race.requirements.present?
  .page-header
    %h1= t('.requirements')
    = t('.requirement_instructions')
  .row
    - @registration.race.requirements.each do |req|
      .col-xs-4.pull-left
        .panel.panel-default
          .panel-heading
            = req.name
          .panel-body
            - if req.completed?(@registration)
              %p.lead
                = t('status')
                = t('completed')
            - else
              %p.lead
                = t('status')
                = t('incomplete')
              = link_to t('.complete'), race_requirement_url(:race_id => req.race.id, :id => req.id), :class => ['btn', 'btn-primary']

.page-header
  %h1
    = t('.people')
    %small
      = @registration.people.count
      = t('of')
      = @registration.race.people_per_team
      - if @registration.has_slots?
        = link_to new_race_registration_person_url(@registration.race.id, @registration.id) do
          .fa.fa-plus.fa-fw
  = t('.people_instructions')

- if @registration.people.blank?
  = t ('.no_people_added')
- else
  = render 'people/table', :people => @registration.people
