.page-header
  %h1
    = t('.title')
    - if @registration.race.open_for_registration? || current_user.is_any_of?(:admin, :operator)
      %small
        = link_to edit_race_registration_path(@race.id, @registration.id) do
          .fa.fa-edit
          = t('.edit')

  - if @registration.race.open_for_registration?
    = t('.can_change_until', :date => @race.registration_close.strftime('%B %e, %Y'))
  - else
    %i.lead.text-danger
      = t('.registration_closed')

= render @display_notification.to_s if @display_notification

.row
  .col-xs-2
    .panel.panel-default
      .panel-heading
        = t('.status')
      .panel-body.text-center
        - if @registration.finalized?
          .text-success
            %i.fa.fa-smile-o.fa-3x.fa-spin
            %br
            = t('.complete')
        - else
          - if @registration.race.full?
            .text-warning
              %i.fa.fa-cloud.fa-3x
              %br
              = t('.waitlist')
          - else
            .text-danger
              %i.fa.fa-frown-o.fa-3x
              %br
              = t('.incomplete')

  .col-xs-10
    .row
      %p.lead
        = t('.registered_as')
        %strong
          = @registration.name
        = t('for')
        = @race.name

    .row
      %i.fa.fa-quote-left.pull-left.fa-border
      %p
        = @registration.description

    - if @registration.twitter.present?
      .row
        %p.lead
          = link_to @registration.twitter, "http://twitter.com/#{@registration.twitter}"


