- flash.each do |key, val|
  .alert{:class => "alert-#{flash_to_bootstrap key}" }
    %button.close{ :data => { :dismiss => "alert" } } x
    - if val.is_a? Array
      - val.each do |msg|
        - if msg.is_a? Hash
          - msg.stringify_keys.each do |k,v|
            - if k.present? && v.present?
              =k.humanize
              =v.join(', and ')
              %br
        - else
          %strong= msg
          %br

    - else
      %strong= val
