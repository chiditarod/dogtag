.navbar.navbar-default.navbar-static-top{role: "navigation"}
  .container
    .navbar-header

      %button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
        = link_to(I18n.t('website_title'), home_path, :class => 'navbar-brand')

      .navbar-collapse.collapse
        %ul.nav.navbar-nav
          %li
            = link_to t('.races'), races_path
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              = I18n.t 'admin'
              %b.caret
            %ul.dropdown-menu
              %li.dropdown-header= t('users')
              %li= link_to t('list'), users_path
              %li= link_to t('new'), new_user_path
              %li.divider

        %ul.nav.navbar-nav.navbar-right
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
              - if current_user
                = current_user.first_name
                %b.caret
                %ul.dropdown-menu
                  %li= link_to "Edit Profile", edit_user_path(current_user)
                  %li= link_to "Logout", user_session_path, :method => :delete, :data => {:confirm => 'Are you sure?'}
              - else
                %li= link_to "Login", new_user_session_path
                %li= link_to "Register", new_user_path

          -#%li.active
            -#%a{href: "./"} Active
          -#%li
            -#%a{href: "http://github.com/ometa/dogtag/"} GitHub

