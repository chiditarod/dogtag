= form_for @user_session, :url => user_session_path do |f|
  -if @user_session.errors.any?
    .alert-danger
      %h4= "#{pluralize(@user_session.errors.count, "issue")} detected:"
      %ul
        - @user_session.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.check_box :remember_me
    = f.label :remember_me
  .action
    = f.submit "Login"
